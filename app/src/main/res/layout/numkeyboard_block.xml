<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/contentMargin"
    android:gravity="center_horizontal">

  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/enter_amount"
      style="@style/Widget.Material3.TextInputLayout.FilledBox"
      app:boxBackgroundMode="filled"
      app:boxCornerRadiusTopStart="8dp"
      app:boxCornerRadiusTopEnd="8dp"
      app:boxCornerRadiusBottomStart="8dp"
      app:boxCornerRadiusBottomEnd="8dp"
      app:boxBackgroundColor="@color/colorSurface"
      app:boxStrokeColor="@color/cardview_light_background"
      app:hintTextAppearance="@style/TextAppearance.POSTech.Hint">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textStyle="bold"
        android:gravity="end" />
  </com.google.android.material.textfield.TextInputLayout>



  <!-- Spacer -->
  <View
      android:layout_width="match_parent"
      android:layout_height="16dp" />

  <!-- NumKeyboard Custom Widget -->
  <com.opurex.ortus.client.widgets.NumKeyboard
      android:id="@+id/numkeyboard"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/title_topmargin"
      android:layout_marginTop="@dimen/contentMargin" />
</LinearLayout>
