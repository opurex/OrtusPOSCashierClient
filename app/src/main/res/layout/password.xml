<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/image_Postech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:scaleType="center"
            android:src="@drawable/logo" />

        <!-- Horizontal layout for login area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Left spacer -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3" />

            <!-- Main content -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.4">

                <!-- User Button (Label or Disabled) -->
                <Button
                    android:id="@+id/password_UserButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="8dp"
                    android:clickable="false"
                    android:focusable="false" />

                <!-- Password Input -->
                <EditText
                    android:id="@+id/password_PassEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/password_UserButton"
                    android:layout_toLeftOf="@+id/password_ClearButton"
                    android:hint="@string/password_PassEdit"
                    android:inputType="textPassword"
                    android:maxLines="1" />

                <!-- Clear Button -->
                <Button
                    android:id="@+id/password_ClearButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/password_UserButton"
                    android:text="Clear" />

                <!-- Login Button -->
                <Button
                    android:id="@+id/password_ValidateButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/password_PassEdit"
                    android:text="Login" />

                <!-- Show/Hide Password -->
                <CheckBox
                    android:id="@+id/password_HidePass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/password_ValidateButton"
                    android:checked="false"
                    android:text="@string/password_HidePass"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

            <!-- Right spacer -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3" />
        </LinearLayout>
    </LinearLayout>
</merge>
