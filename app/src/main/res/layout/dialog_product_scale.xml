<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:importantForAccessibility="yes">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scaled_products_info"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/scale_status_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="âœ— Scale not connected"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:contentDescription="Scale connection status" />

    <TextView
        android:id="@+id/scale_weight_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scale not connected - enter weight manually"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:contentDescription="Current weight reading from scale" />

    <EditText
        android:id="@+id/scale_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter weight in kg"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp"
        android:contentDescription="Manual weight input field" />

    <TextView
        android:id="@+id/scale_price_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter weight to calculate price"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:contentDescription="Calculated price based on weight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:importantForAccessibility="yes">

        <Button
            android:id="@+id/scale_zero_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Zero Scale"
            android:layout_marginEnd="8dp"
            android:enabled="false"
            android:contentDescription="Zero the scale to reset to zero weight" />

        <Button
            android:id="@+id/scale_tare_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tare Scale"
            android:layout_marginStart="8dp"
            android:enabled="false"
            android:contentDescription="Tare the scale to remove container weight" />

    </LinearLayout>

</LinearLayout>