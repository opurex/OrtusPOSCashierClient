    <!-- Base Application Theme -->
    <style name="POSTechTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Material colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!-- Use normal resource here -->
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Toolbar -->
        <item name="toolbarStyle">@style/Widget.POSTech.Toolbar</item>
        <item name="popupMenuStyle">@style/Widget.POSTech.PopupMenu</item>

    </style>

    <!-- Toolbar style -->
    <style name="Widget.POSTech.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
        <item name="navigationIconTint">@android:color/white</item>
    </style>

    <!-- Action Menu Items -->
    <style name="POSTechActionMenuItemText" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="SmallHintText" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">10sp</item> <!-- You can tweak to 8sp or 12sp -->
        <item name="android:textColor">#808080</item> <!-- Optional: lighter hint color -->
    </style>
    <style name="TextAppearance.MyHint.Small" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?colorOnSurfaceVariant</item>
    </style>


    <style name="Widget.POSTech.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:background">@color/colorSecondPrimary</item>
        <item name="android:popupBackground">@drawable/custom_popupmenu_background</item>
<!--        <item name="titleTextColor">@android:color/white</item>-->
<!--        <item name="subtitleTextColor">@android:color/white</item>-->
<!--        <item name="navigationIconTint">@android:color/white</item>-->
<!--        <item name="android:textColor">@color/popup_outer_txt</item> &lt;!&ndash; White &ndash;&gt;-->
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:textAppearance">@style/POSTech.PopupMenu.Text</item>
    </style>

    <style name="POSTech.PopupMenu.Text" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/popup_outer_txt</item> <!-- #FFFFFF -->
    </style>





    <style name="TextAppearance.POSTech.Hint" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>


    <!-- Buttons -->
    <style name="button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/btn_action</item>
        <item name="android:padding">@dimen/contentMargin</item>
        <item name="android:textColor">@color/btn_action_txt</item>
    </style>

    <style name="buttonImportant" parent="Widget.Material3.Button">
        <item name="backgroundTint">@drawable/btn_important</item>
        <item name="android:padding">@dimen/contentMargin</item>
        <item name="android:textColor">@color/btn_action_txt</item>
    </style>

    <style name="buttonInput" parent="Widget.Material3.Button">
        <item name="backgroundTint">@drawable/btn_input</item>
        <item name="android:padding">@dimen/contentMargin</item>
        <item name="android:textColor">@color/btn_input_txt</item>
    </style>

    <style name="btnTicket" parent="Widget.Material3.Button">
        <item name="backgroundTint">@drawable/btn_ticket_line_item</item>
        <item name="android:padding">@dimen/contentMargin</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="btnTicket.btn_add" parent="btnTicket">
        <item name="android:padding">13dp</item>
    </style>

    <style name="btnTicket.btn_subtract" parent="btnTicket.btn_add" />

    <style name="numButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">#34b5e9</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Widget.POSTech.Button.Coin" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="Widget.POSTech.TextInput.Dense" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="list">
        <item name="android:background">@color/content1_bg</item>
        <item name="android:cacheColorHint">@color/content1_bg</item>
    </style>

    <style name="ticketLineList">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cacheColorHint">@color/content1_bg</item>
    </style>
    <style name="numButton.Important" parent="numButton">
        <item name="backgroundTint">#ff8800</item>
    </style>

    <style name="numButton.Danger" parent="numButton">
        <item name="backgroundTint">#484848</item>
    </style>




