    <!-- Material 3 Popup Button Base -->
    <style name="btnPopup" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">@dimen/bigBtnWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
<!--        <item name="android:paddingHorizontal">16dp</item>-->
<!--        <item name="android:paddingVertical">8dp</item>-->

        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>


    </style>

    <!-- Material 3 Positive Button -->
    <style name="btnPopup.positive" parent="btnPopup">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

    <!-- Material 3 Negative Button -->
    <style name="btnPopup.negative" parent="btnPopup">
        <item name="android:backgroundTint">?attr/colorError</item>
    </style>

    <!-- Material 3 Styled Popup Header -->
    <style name="popup_header" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/popupGeneralPadding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Material 3 Themed Dialog Window -->
    <style name="popup_window" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:background">?attr/colorSurfaceContainerHighest</item>
    </style>

    <!-- Optional: Tab Widget Styled with Material Colors -->
    <style name="tabWidget">
        <item name="android:background">?attr/colorSurfaceVariant</item>
        <item name="android:divider">?attr/colorOutline</item>
        <item name="android:minWidth">300dp</item>
        <item name="android:showDividers">middle|end</item>
    </style>




    <style name="itemLabel" parent="TextAppearance.Material3.BodySmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>


