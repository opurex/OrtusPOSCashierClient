<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!-- Title -->
    <TextView android:id="@+id/open_cash_status"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:text="@string/cash_not_opened" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/contentMargin"
        android:layout_marginRight="@dimen/contentMargin"
        android:layout_weight="5"
        android:orientation="horizontal">
        <!-- Value buttons -->
        <GridView
            android:id="@+id/open_cash_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:columnWidth="@dimen/bigBtnWidth"
            android:horizontalSpacing="@dimen/btnSpacing"
            android:numColumns="4"
            android:stretchMode="spacingWidthUniform"
            android:verticalSpacing="@dimen/btnSpacing" />

        <!-- Amount -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/cash_amount" />

            <EditText
                android:id="@+id/open_cash_amount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:lines="1"
                android:numeric="decimal"
                android:textSize="18dip" />

            <!-- Keyboard -->
            <com.opurex.ortus.client.widgets.NumKeyboard
                android:id="@+id/numkeyboard"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/contentMargin"
                android:layout_marginBottom="@dimen/title_topmargin" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
